<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dragonbackground"
    tools:context=".ProfilePicFragment">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="100dp">

        <!-- PFP   ?-->
        <ImageView
            android:id="@+id/profilePic"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:background="@drawable/pfp"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            android:src="@drawable/mew" />

        <!-- edit circle    ?-->
        <TextView
            android:id="@+id/username_tv"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:layout_marginTop="72dp"
            android:text="Jcole21"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/email_tv"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:layout_marginTop="109dp"
            android:text="jcole@gmail.com"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            />
    </FrameLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@android:color/transparent">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:background="@android:color/transparent"
                    android:layout_height="80dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top"
                        android:layout_marginEnd="118dp"
                        android:fontFamily="sans-serif"
                        android:text="Username"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/name_tv"
                        android:layout_width="332dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/profilepiceditcircle"
                        android:fontFamily="sans-serif"
                        android:text="Jermain Cole"
                        android:textColor="#838383"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:background="@null"
                    android:layout_height="80dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top"
                        android:layout_marginEnd="117dp"
                        android:fontFamily="sans-serif"
                        android:text="Your email"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/email_view_tv"
                        android:layout_width="332dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:fontFamily="sans-serif"
                        android:text="jcole@gmail.com"
                        android:textColor="#838383"
                        android:textSize="20sp"
                        android:background="@drawable/profilepiceditcircle"
                        android:textStyle="bold" />
                </FrameLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top"
                        android:layout_marginEnd="50dp"
                        android:fontFamily="sans-serif"
                        android:text="Number of Saved Games"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <!-- to put image beside pass-->
                    <LinearLayout
                        android:layout_width="332dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/profilepiceditcircle"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingEnd="15dp">

                        <TextView
                            android:id="@+id/saved_games"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif"
                            android:textColor="#838383"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </FrameLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>