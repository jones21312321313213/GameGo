<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Glowing Shadow Effect -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="24dp"/>
            <solid android:color="#2E2E2E"/>
            <!-- Add a glowing effect with a slight border (stroke) -->
            <stroke
                android:width="6dp"
                android:color="#80FFFFFF" /> <!-- Semi-transparent white for a glow effect -->
        </shape>
    </item>

    <!-- Inner White Layer -->
    <item android:top="8dp" android:left="8dp" android:right="8dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <solid android:color="#FFFFFF"/> <!-- White background for content -->
        </shape>
    </item>

</layer-list>
