<resources>

    <style name="Theme.GameGo" parent="Theme.Material3.Light.NoActionBar">
        <!-- Disable Action Bar and Title -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Primary Color for Buttons -->
        <item name="colorPrimary">@color/soft_red</item> <!-- Your desired primary color -->
        <item name="colorPrimaryVariant">@color/deep_red</item>
        <item name="colorOnPrimary">@color/on_red</item> <!-- Text color on primary color (e.g., white) -->

        <!-- Ensure Buttons Use the Primary Theme -->
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button</item>

        <!-- Force Material 3 Buttons to Use Custom Colors -->
        <item name="materialButtonStyle">@style/CustomMaterialButton</item>

    </style>

    <!-- Custom Material Button Style -->
    <style name="CustomMaterialButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">?attr/colorPrimary</item> <!-- Use the primary color for the button's background -->
        <item name="android:textColor">?attr/colorOnPrimary</item> <!-- Use the text color set for primary color -->
    </style>

</resources>
